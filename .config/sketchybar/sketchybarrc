source "$HOME/.config/sketchybar/colours.sh"
PLUGIN_DIR="$CONFIG_DIR/plugins"

# variables
FONT="SF PRO"
FONT_WEIGHT="Medium"
FONT_SIZE="13.0"

ICON_SIZE="15.0"
ICON_FONT="Hack Nerd Font"
ICON_FONT_WEIGHT="Bold"

# todo:
